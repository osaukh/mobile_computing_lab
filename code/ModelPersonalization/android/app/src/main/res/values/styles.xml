<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="AppTheme" parent="@style/Theme.MaterialComponents.Light">

  </style>

  <style name="Toast" parent="@style/Widget.AppCompat.Button">
    <item name="android:layout_width">300dp</item>
    <item name="android:layout_height">68dp</item>
    <item name="android:layout_margin">8dp</item>
    <item name="android:orientation">vertical</item>
    <item name="android:padding">10dp</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:background">@drawable/toast_default</item>
    <item name="android:foreground">@color/transparent</item>
  </style>

  <style name="ClassButton" parent="@style/Widget.AppCompat.Button">
    <item name="android:layout_margin">6dp</item>
    <item name="android:paddingLeft">4dp</item>
    <item name="android:paddingRight">4dp</item>
    <item name="android:paddingTop">12dp</item>
    <item name="android:paddingBottom">12dp</item>
    <item name="android:background">@drawable/btn_default</item>
    <item name="android:foreground">?android:attr/selectableItemBackground</item>
  </style>

  <style name="BigButton" parent="@style/Widget.AppCompat.Button">
    <item name="android:layout_width">300dp</item>
    <item name="android:layout_height">68dp</item>
    <item name="android:layout_margin">8dp</item>
    <item name="android:orientation">vertical</item>
    <item name="android:padding">10dp</item>
  </style>

  <style name="BigButtonTitle" parent="android:Widget.TextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:letterSpacing">.08</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:textSize">20sp</item>
  </style>

  <style name="BigButtonSubtitle" parent="android:Widget.TextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">14sp</item>
  </style>

  <style name="ChipTextAppearance" parent="TextAppearance.MaterialComponents.Button">
    <item name="android:textSize">20sp</item>
  </style>
</resources>
